<h1>Sign in</h1>

<%= form_with url: sign_in_path, data: {turbo: false} do |form| %>
  <div class="mb-3">
    <%= form.label :mail %>
    <%= form.text_field :email, class: "form-control", placeholder: "test@test.com" %>
  </div>
  <div class="mb-3">
    <%= form.label :password %>
    <%= form.password_field :password, class: "form-control", placeholder: "password" %>
  </div>
  <div class="mb-3">
    <%= form.submit "Sign In", class: "btn btn-primary" %>
  </div>
<% end %>